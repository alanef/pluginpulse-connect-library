{
    "name": "pluginpulse/connect-library",
    "description": "Embeddable diagnostic and monitoring library for WordPress plugins",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "keywords": ["wordpress", "diagnostics", "monitoring", "plugin", "support"],
    "homepage": "https://pluginpulse.io",
    "authors": [
        {
            "name": "PluginPulse",
            "email": "support@pluginpulse.io",
            "homepage": "https://pluginpulse.io"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "PluginPulse\\Library\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PluginPulse\\Library\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs src --standard=WordPress-Extra",
        "post-update-cmd": [
            "wp i18n make-pot . ./languages/pluginpulse-connect.pot --skip-audit --domain=pluginpulse-connect"
        ]
    }
}